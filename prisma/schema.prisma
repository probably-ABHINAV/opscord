generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  
  githubId  Int?
  discordId String?
  
  repositories Repository[]
  integrations Integration[]
  notifications Notification[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Repository {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name        String
  fullName    String   @unique
  description String?
  url         String?
  
  githubId    Int?
  webhookSecret String?
  
  pullRequests PullRequest[]
  issues      Issue[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PullRequest {
  id          String   @id @default(cuid())
  repositoryId String
  repository  Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  
  number      Int
  title       String
  body        String?
  author      String
  url         String
  state       String   @default("open")
  
  summary     String?
  discordMessageId String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([repositoryId, number])
}

model Issue {
  id          String   @id @default(cuid())
  repositoryId String
  repository  Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  
  number      Int
  title       String
  body        String?
  author      String
  url         String
  state       String   @default("open")
  labels      String[]
  
  category    String?
  severity    String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([repositoryId, number])
}

model Integration {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type      String   // "github" | "discord"
  token     String?
  guildId   String?
  channelId String?
  
  isActive  Boolean  @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type      String   // "pr" | "issue" | "push"
  title     String
  message   String
  read      Boolean  @default(false)
  
  createdAt DateTime @default(now())
}
